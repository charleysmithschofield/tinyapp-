<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <div class="container-fluid d-flex justify-content-between">
      <div class="d-flex">
        <!-- Brand logo linking to /urls -->
        <a class="navbar-brand" href="/urls">TinyApp</a>
        <!-- Navigation links rendered horizontally -->
        <ul class="navbar-nav d-flex flex-row">
          <!-- Link to My URLs -->
          <li class="nav-item me-2">
            <a class="nav-link" href="/urls">My URLs</a>
          </li>
          <!-- Link to Create New URL -->
          <li class="nav-item">
            <a class="nav-link" href="/urls/new">Create New URL</a>
          </li>
        </ul>
      </div>
      
      <!-- Right-aligned items using ms-auto -->
      <div class="ms-auto">
        <!-- Display username if available -->
        <% if (username) { %>
          <div class="d-flex align-items-center text-light">
          <p class="me-2"> Logged in as: <%= username %></p>
          <!-- Logout Form -->
          <form class="d-flex" action="/logout" method="POST">
            <button type="submit" class="btn btn-light">Logout</button>
          </form>
          <% } else { %>
          <!-- Login Form -->
          <form class="d-flex" action="/login" method="POST">
            <!-- Input field for entering username -->
            <input type="text" name="username" class="form-control me-2" placeholder="Username">
            <!-- Submit button for logging in -->
            <button type="submit" class="btn btn-light">Login</button>
          </form>
          <% } %>
        </div>
      </div>
  </nav>
</header>