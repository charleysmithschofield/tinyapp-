<!-- urls_index.ejs -->
<!DOCTYPE html> <!-- Defined the document type and verstion of HTML -->
<html lang="en"> <!-- Specifies the language of the document -->
  <head>
    <meta charset="utf-8" /> <!-- Character encoding for the document -->
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    /> <!-- Responsive viewport settings for mobile devices -->

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
      crossorigin="anonymous"
    /> <!-- Linking to Bootstrap CSS file -->

    <title>TinyApp</title> <!-- Document title -->

     <!-- Custom CSS for button styling -->
     <style>
      .btn-custom {
        background-color: #ffffff; /* White background */
        color: #ff0000; /* Red text color */
        border: 1px solid #ff0000; /* Red border */
      }
      .btn-edit {
        background-color: #ffffff; /* White background */
        color: #0000ff; /* Blue text color */
        border: 1px solid #0000ff; /* Blue border */
      }
  </style>
</head>
<body>
  </head>
  <body>
      <!-- Include header partial-->
      <%- include('partials/_header')%>

    <main style="margin: 1em;">
      <h3>My URLs</h3>
      <table class="table">
        <thead>
          <tr>
            <!-- Table headers for Short URL ID, Long URL, Edit, & Delete -->
            <th scope="col">Short URL ID</th>
            <th scope="col">Long URL</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
         <!-- Loop to iterate over each key in the urls object-->
          <% for (let id in urls) { %>
            <tr>
              <!-- Displaying the ID of the shortened URL-->
              <td><%= id %></td>
              <!-- Access the longURL property of each URL object-->
              <td><%= urls[id].longURL %></td>
              <!-- Edit Link for each URL-->
              <td>
                <a href="/urls/<%= id %>" class="btn btn-edit">Edit</a> <!-- Add btn-edit class -->
              </td>
              <!-- Adding form for deleting the URL-->
              <td>
                <form method="POST" action="/urls/<%= id %>/delete">
                  <!-- Adding Delete button -->
                  <button type="submit" class="btn btn-custom">Delete</button>
                </form>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </form>
    <!-- Link to create a new shortened URL, directing to the /urls/new route -->
    <a href="/urls/new">Shorten a New URL</a>

    <!-- Bootstrap JS -->
    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>