<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
      crossorigin="anonymous"
    />
    <title>TinyApp</title>
     <!-- Custom CSS for button styling -->
  <style>
    .btn-custom {
      background-color: #ffffff; /* White background */
      color: #ff0000; /* Red text color */
      border: 1px solid #ff0000; /* Red border */
    }
  </style>
</head>
<body>
  </head>
  <body>
      <!-- Include header partial-->
      <%- include('partials/_header')%>

    <main style="margin: 1em;">
      <h3>My URLs</h3>
      <table class="table">
        <thead>
          <tr>
            <!-- Table headers for Short URL ID, Long URL, and Actions-->
            <th scope="col">Short URL ID</th>
            <th scope="col">Long URL</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <!-- Loop to iterate over each key in the urls object-->
          <% for (let id in urls) { %>
            <tr>
              <!-- Displaying the ID of the shortened URL-->
              <td><%= id %></td>
              <!-- Displaying the original URL-->
              <td><%= urls[id] %></td>
              <!-- Adding form for deleting the URL-->
              <td>
                <form method="POST" action="/urls/<%= id %>/delete">
                <button type="submit" class="btn btn-custom">Delete</button>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <!-- Link for shortenin a new URL (currently inactive)-->
      <a href='#'>Shorten a New URL</a>
    </main>
    <!-- Bootstrap JS -->
    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>